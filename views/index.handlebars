<button id="get-news-button">

    Find News</button>
<div class="news-articles">
    {{#each news}}
    <div class="card bg-light" style="width: auto;">
        <div class="card-body">
            <h3 class="card-title">{{this.title}}:</h3>
            <p class="card-text"> "{{this.description}}"</p>
            <a href="{{this.url}}" class="btn btn-primary">Go to Article</a>
            <!-- Button trigger modal -->

            <button type="button" class="btn btn-secondary view-comments" data-toggle="modal" data-target="#commentModal_{{this.id}}" data-id="{{this.id}}">
                View/Add Comments
            </button>

            <div class="modal fade" id="commentModal_{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="commentModalTitle">Comments</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{#each comments}}
                                <p>{{comment_text}}</p>
                                <br>
                            {{/each}}
                        </div>
                        <form>
                            <hr>
                            <div class="input-group">
                                <textarea class="form-control comment-content_{{this.id}}" aria-label="With textarea"></textarea>
                            </div>
                            <hr>
                            <button type="button" class="btn btn-primary submit-comment" data-id="{{this.id}}">Add Comment</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}

</div>